pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Run Unit Tests') { 
            steps {
                script {
                    sh 'npm test'
                }
            }
        }
        stage('Build application') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv('SonarQubeServer') { 
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

    }
}
